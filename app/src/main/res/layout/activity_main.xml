<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/g_50"
    android:id="@+id/rootLayout"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#45C068"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Mountain Diary"
            android:textColor="#016F20"
            android:textSize="27dp"
            android:padding="10dp"
            android:id="@+id/authTv"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login"
            style="?android:attr/borderlessButtonStyle"
            android:textColor="#016F20"
            android:backgroundTint="#1645C068"
            android:textSize="18dp"
            android:id="@+id/btnLogin" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="40dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/mountains" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="28dp"
                android:layout_marginTop="15dp"
                android:layout_gravity="center_horizontal"
                android:textColor="#45C068"
                android:text="Record your"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="28dp"
            android:layout_gravity="center_horizontal"
            android:textColor="#45C068"
            android:text="mement"/>
        <Button
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:text="Hiking Course"
            android:id="@+id/hikeBtn"
            android:textSize="15dp"
            android:textColor="@color/white"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"

            android:background="@drawable/button_round"
            />

        <Button
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:text="Diary"
            android:id="@+id/diaryBtn"
            android:textSize="15dp"
            android:textColor="@color/white"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:background="@drawable/button_round" />


        <Button
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:text="Video"
            android:textSize="15dp"
            android:id="@+id/videoBtn"
            android:textColor="@color/white"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:background="@drawable/button_round" />

        <Button
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:text="Map"
            android:textSize="15dp"
            android:id="@+id/mapBtn"
            android:textColor="@color/white"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:background="@drawable/button_round"
            android:backgroundTint="#45C068" />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp"
            android:layout_gravity="right"
            android:id="@+id/settingBtn"
            android:src="@drawable/gear" />

<!--        <Button-->
<!--            android:layout_width="200dp"-->
<!--            android:layout_height="60dp"-->
<!--            android:text="Setting"-->
<!--            android:textSize="15dp"-->
<!--            android:id="@+id/settingBtn"-->
<!--            android:layout_gravity="center_horizontal"-->
<!--            android:layout_marginTop="30dp"-->
<!--            android:backgroundTint="#45C068" />-->


    </LinearLayout>

</LinearLayout>